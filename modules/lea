process lea {
    label 'gwas'
    cache 'lenient'
    //cpus "${task.cpus}"
    maxErrors '-1'
    errorStrategy { task.exitStatus == 143 ? 'retry' : 'terminate' }

    input:
    // [suffix, [vcf, env]]
    tuple val(env), path(files) 

    output:
    tuple val (env), path ("*_zscores.txt"), emit: lea_zscores
    stdout emit: result

    script:
    def geno = "${files[0]}"
    def env_file = "${files[1]}"
    """
    lea.r "${env}" "${geno}" "${env_file}"
    """
}