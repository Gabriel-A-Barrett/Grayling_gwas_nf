params {
    vcf = "$baseDir/data/consensus.vcf"
    meta = "$baseDir/data/meta.csv"
    outdir = "$baseDir/results"
    ann_vcf = "$baseDir/data/"
    fullentap = "$baseDir/data/final_annotations_no_contam_lvl1.tsv"
}

profiles {
    docker {
        docker.enabled = true
        process.container = 'gbarrett9086/gwas-nf'
        temp = 'auto' // path of your choise as /tmp directory in container
    }

    slurm {
        singularity.enabled = true
        executer {
            name = 'slurm'
            queuesize = 200
            pollInterval = '30 sec' // checking for process termination
        }
        process {
            executer = 'slurm'
            queue = 'all'
            container = 'gwas-nf_latest.sif' // after singularity pull --docker-login --force gwas-nf_latest.sif docker://gbarrett9086/gwas-nf
            clusterOptions = '--qos=general'
        
            withName: 'vcf2GWAS' {
                cpus = 1
                memory = 8.GB
                queue = 'general'
            }
        
            withLabel: 'little_demon' {
                cpus = 1
                memory = 2.GB
                queue = 'general'
            }
            
            withLabel: 'gwas' {
                cpus = 1
                memory = 5.GB
                queue = 'general'
            }
        }    
    }
}